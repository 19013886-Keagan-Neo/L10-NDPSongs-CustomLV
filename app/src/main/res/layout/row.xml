<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_library_music" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="#FF3378"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv1star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/iv2star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/iv3star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/iv4star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/btn_star_big_off" />

                    <ImageView
                        android:id="@+id/iv5star"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/btn_star_big_off" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:id="@+id/tvSingers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Singers" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#2288EE"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

</LinearLayout>
